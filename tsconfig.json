{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext",
            "webworker",
        ],
        "removeComments": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "jsx": "react",
        "module": "commonjs",
        "allowJs": true,
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["./ts/**/*.ts", "ts/components/common/ListView.tsx"]
}